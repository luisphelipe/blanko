{
  "name": "cda-games-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "yarn test_err 2>/dev/null",
    "ci": "NODE_ENV=ci yarn test_file_script './tests/**/*test.ts'",
    "dev": "ts-node-dev --respawn --transpile-only --no-notify ./bin/wwwdev",
    "build": "NODE_ENV=production yarn build_script",
    "dev_build": "NODE_ENV=development yarn build_script",
    "test_file_script": "yarn migrate && mocha --exit -r ts-node/register ./tests/setup.ts",
    "build_script": "yarn run migrate && tsc && yarn run cpmigrations && yarn run cpmodels && yarn run cpconfig",
    "test_err": "yarn test_file './tests/**/*test.ts'",
    "test_file": "NODE_ENV=test yarn test_file_script",
    "cpmigrations": "cp -r migrations ./dist/migrations",
    "cpmodels": "cp -r models ./dist/models",
    "cpconfig": "cp -r config ./dist/config",
    "migrate": "npx sequelize db:migrate"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-react-views": "^0.11.0",
    "joi": "^17.2.1",
    "mocha": "^8.1.1",
    "morgan": "^1.10.0",
    "pg": "^8.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "roman-numerals": "^0.3.2",
    "rosie": "^2.0.1",
    "sequelize": "^6.3.4",
    "sequelize-cli": "^6.2.0",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "styled-components": "^5.2.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "tsc": "^1.20150623.0",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/joi": "^14.3.4",
    "@types/mocha": "^8.0.2",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/pg": "^7.14.4",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/roman-numerals": "^0.3.0",
    "@types/rosie": "^0.0.38",
    "@types/sequelize": "^4.28.9",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "@types/styled-components": "^5.1.3"
  }
}
